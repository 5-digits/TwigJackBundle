{
    "name": "boekkooi/twig-jack-bundle",
    "type": "symfony-bundle",
    "keywords": [ "twig", "symfony", "defer", "inheritance", "extension", "doctrine", "loader" ],
    "description": "Handy additional features for Twig within symfony 2",
    "require": {
        "php": ">=5.3.3",
        "symfony/framework-bundle": "~2.1",
        "symfony/twig-bundle": "~2.1",
        "symfony/yaml": "~2.1",
        "symfony/dependency-injection": "~2.1",
        "symfony/finder": "~2.1",

        "twig/twig": "~1.15"
    },
    "suggest": {
        "doctrine/common": "Needed to use the twig doctrine loader functionality.",
        "symfony/validator": "Allows the twig constraint to be used"
    },
    "require-dev": {
        "phpunit/phpunit": "4.6.4",
        "phpunit/phpunit-mock-objects": "2.3.1",
        "fabpot/php-cs-fixer": "1.6.2",

        "symfony/validator": "~2.3, >=2.3.19",
        "doctrine/common": "~2.1, >=2.1.4"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Warnar Boekkooi",
            "email": "warnar@boekkooi.net"
        }
    ],
    "autoload": {
        "psr-4": {
            "Boekkooi\\Bundle\\TwigJackBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Boekkooi\\Bundle\\TwigJackBundle\\": "tests/"
        }
    },
    "minimum-stability": "dev"
}
